<p>Komitety wyborcze</p>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @committees.each do |committee| %>
      <tr>
        <td><%= committee.name %></td>
        <td> <%= image_tag(committee.logo_url, :width => 200) if committee.logo.present? %></td>
        <td><%= link_to 'Szczegóły', committee %></td>
        <td><%= link_to 'Edytuj', edit_committee_path(committee) %></td>
        <td><%= link_to 'Usuń', committee, method: :delete, data: { confirm: 'Przemyśl to jeszcze' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Utwórz', new_committee_path %>
