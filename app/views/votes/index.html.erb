<% if user_signed_in? %>
  <% if current_user.okregowy? || current_user.centralny? %>
  <h1>Głosy: </h1>



<table>
  <thead>
    <tr>
      <th>Ilość</th>
      <th>Komitet</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.number %></td>
        <td><%= vote.committee.name%></td>
 
        <td><%= link_to 'Szczegóły', [vote.district, vote] %></td>
        <td><%= link_to 'Edytuj', edit_district_vote_path(vote.district, vote) %></td>
        <td><%= link_to 'Usuń', [vote.district, vote], method: :delete, data: { confirm: 'Przemyśl to jeszcze' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  
<br>

<%= link_to 'Dodaj głosy', new_district_vote_path %>
   <% end %>    <% end %> 

