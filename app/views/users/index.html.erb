<h1>Użytkownicy</h1>

<table>
  <thead>
    <tr>
      <th>Imię</th>
      <th>Rola</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Szczegóły', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Przemyśl to jeszcze' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Utwórz', new_user_path %>
